import static org.junit.Assert.*;

import java.util.ArrayList;
import java.util.List;

import org.junit.Test;

public class GramSchmidtTest {

	@Test
	public void testKhanExampleSmall() {
		List<Vector> vectors = new ArrayList<Vector>();
		double[] data1 = {0, 0, 1, 1};
		double[] data2 = {0, 1, 1, 0};
		double[] data3 = {1, 1, 0, 0};
		
		Vector v1 = new Vector(4, data1);
		Vector v2 = new Vector(4, data2);
		Vector v3 = new Vector(4, data3);
		
		vectors.add(v1);
		vectors.add(v2);
		vectors.add(v3);
		
		List<Vector> resultActual = GramSchmidt.gramSchmidt(vectors);
		
		Vector result1 = new Vector(4, new int[]{1, 1, 1, 1})
		List<Vector> resultExpected = {result1, result2, result3};
	
	}

}
